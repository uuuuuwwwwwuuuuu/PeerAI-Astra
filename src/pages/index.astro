---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header/Header.astro';
import HeaderInfo from '../components/HeaderInfo/HeaderInfo.astro';
import MainCard from '../components/MainCard/MainCard.astro';
import PricesBlock from '../components/PricesBlock/PricesBlock.astro';
import Footer from '../components/Footer/Footer.astro';
import CalcModalReact from '../components/CalcModalReact/CalcModalReact/CalcModalReact';
import Modal from '../components/AIFunnel/Modal/Modal';
---

<Layout>
    <main>
        <HeaderInfo />
        <section class="main_container">
            <MainCard
                title="No more switching between files."
                secondInfo="This also works for folders, docs, terminal content, codebase, and more 😈"
                gifSrc="/img/first_main_card.gif"
            >
                <p slot="info">
                    To add missing context: directly reference code by including other files in the
                    chat by adding <b>@filename</b>.
                </p>
            </MainCard>
            <MainCard
                title="No more tedious changes, or forgetting language syntax."
                secondInfo="Here, we ask Pear to help us handle edge cases 😏"
                gifSrc="/img/second_main_card.gif"
            >
                <p slot="info">
                    Directly make changes inline by pressing CMD+I (ALT+L on Windows), and choose
                    what you want to keep.
                </p>
            </MainCard>
            <MainCard
                title="No more tiresome copy pasting."
                secondInfo="Prompt it right away 😎"
                gifSrc="/img/third_main_card.gif"
            >
                <p slot="info">
                    Directly bring your code to the chat by selecting it and pressing CMD+L (ALT+L
                    on Windows).
                </p>
            </MainCard>
        </section>
        <PricesBlock />
    </main>

    <Footer />
    <!-- <CalcModal /> -->
    <CalcModalReact client:load />
    <Modal client:load/>
</Layout>
<style>
    .main_container {
        max-width: 1330px;
        width: 100%;
        margin: 100px 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 100px;
        padding: 0 20px;
        z-index: 10;
    }

    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: var(--bg-main);
    }

    @media screen and (max-width: 770px) {
        .main_container {
            gap: 50px;
        }
    }

    @media screen and (max-width: 470px) {
        .main_container {
            margin: 50px 0;
        }
    }
</style>
